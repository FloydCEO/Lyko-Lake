{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin.html",
        "destination": "/admin.html"
      },
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/auth.html",
        "destination": "/auth.html"
      },
      {
        "source": "/auth",
        "destination": "/auth.html"
      },
      {
        "source": "/help.html",
        "destination": "/help.html"
      },
      {
        "source": "/help",
        "destination": "/help.html"
      },
      {
        "source": "/profile.html",
        "destination": "/profile.html"
      },
      {
        "source": "/upload.html",
        "destination": "/upload.html"
      },
      {
        "source": "/upload",
        "destination": "/upload.html"
      },
      {
        "source": "/:username",
        "destination": "/profile.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
