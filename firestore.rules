rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents
    match /{document=**} {
      allow read: if true;
    }
    
    // Users can update their own profile (including game stats)
    match /users/{userId} {
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow creating missions (placeholder collection for user missions)
    match /missions/{missionId} {
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow users to follow others (friends)
    match /follows/{followId} {
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.followerId;
    }
    
    // Allow users to create reports
    match /reports/{reportId} {
      allow create: if request.auth != null;
    }
    
    // Allow notifications
    match /notifications/{notificationId} {
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
