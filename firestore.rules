rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is verified
    function isVerified() {
      return isSignedIn() && request.auth.token.email_verified == true;
    }
    
    // Helper function to check if user is admin or CEO
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank == 'Admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank == 'CEO');
    }
    
    // Helper function to check if user is CEO
    function isCEO() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank == 'CEO';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Usernames collection (for username uniqueness)
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isAdmin();
    }
    
    // Posts collection
    match /posts/{postId} {
      allow read: if true;
      allow create: if isVerified();
      allow update: if isVerified() && (request.auth.uid == resource.data.authorId || isAdmin());
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.authorId || isAdmin());
    }
    
    // Likes collection
    match /likes/{likeId} {
      allow read: if true;
      allow create: if isVerified();
      allow update: if isVerified() && request.auth.uid == resource.data.userId;
      allow delete: if isVerified() && request.auth.uid == resource.data.userId;
    }
    
    // Comments collection
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isVerified();
      allow update: if isVerified() && request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.authorId || isAdmin());
    }
    
    // Post views collection
    match /postViews/{viewId} {
      allow read: if true;
      allow create: if isVerified();
      allow update: if false;
      allow delete: if false;
    }
    
    // Follows collection
    match /follows/{followId} {
      allow read: if true;
      allow create: if isVerified();
      allow delete: if isVerified() && request.auth.uid == resource.data.followerId;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isVerified();
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Reports collection
    match /reports/{reportId} {
      allow read: if isAdmin();
      allow create: if isVerified();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Ban appeals collection
    match /banAppeals/{appealId} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.userId);
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Bans collection
    match /bans/{userId} {
      allow read: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Admin logs collection
    match /adminLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update: if false;
      allow delete: if isCEO();
    }
    
    // Metadata collection (for counters, etc.)
    match /metadata/{document=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
