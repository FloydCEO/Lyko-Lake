rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO'];
    }
    
    function isCEO() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank == 'CEO';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Metadata collection (for user counter)
    match /metadata/{document} {
      allow read: if true;
      allow write: if true; // Needed for user registration
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if true; // Public profiles
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isCEO();
    }
    
    // Usernames collection (for username lookup)
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isAdmin();
    }
    
    // Bans collection
    match /bans/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Posts collection
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() && 
                       request.resource.data.authorId == request.auth.uid &&
                       !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('muted', false);
      allow update: if isOwner(resource.data.authorId) || isAdmin();
      allow delete: if isOwner(resource.data.authorId) || isAdmin();
    }
    
    // Follows collection
    match /follows/{followId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.followerId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.followerId == request.auth.uid;
    }
    
    // Reports collection
    match /reports/{reportId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Admin audit log
    match /adminLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
