rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write to users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write to usernames collection
    match /usernames/{username} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read/write to posts collection
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['likes', 'dislikes', 'views'])
      );
    }

    // Allow likes
    match /likes/{likeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow comments
    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow notifications
    match /notifications/{notifId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null;
    }

    // Allow post views
    match /postViews/{viewId} {
      allow write: if request.auth != null;
      allow read: if false;
    }

    // Allow follows
    match /follows/{followId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow reports
    match /reports/{reportId} {
      allow write: if request.auth != null;
      allow read: if false;
    }

    // Allow bans
    match /bans/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null;
    }

    // Allow admin logs
    match /adminLogs/{logId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO'];
      allow write: if request.auth != null;
    }
  }
}
