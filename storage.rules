rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is CEO
    function isCEO() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank == 'ceo';
    }
    
    // Helper function to check if user is admin or CEO
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['admin', 'ceo'];
    }
    
    // Helper function to check if user is banned
    function isBanned() {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userData.banned == true && 
             (userData.banExpiry == null || userData.banExpiry > request.time);
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if true;
      
      // Users can update their own profile (bio, avatar)
      // But cannot change rank, banned status, or uid
      allow update: if request.auth.uid == userId &&
                      request.resource.data.rank == resource.data.rank &&
                      request.resource.data.banned == resource.data.banned &&
                      request.resource.data.uid == resource.data.uid;
      
      // Only allow user creation during registration
      allow create: if request.auth.uid == userId;
      
      // CEO can update anyone's profile
      allow write: if isCEO();
    }
    
    // Usernames collection
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null;
      allow write: if isCEO();
    }
    
    // Metadata collection
    match /metadata/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Ban logs collection (for tracking bans)
    match /banLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
    }
    
    // Admin actions log
    match /adminLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
    }
  }
}
